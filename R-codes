names(TidyTable)<-gsub("Gyro", "Gyroscope", names(TidyData))
names(TidyTable)<-gsub("^f", "Frequency", names(TidyData))
names(TidyTable) <- gsub("-mean-", "_Mean_", names(TidyData))
name.new <- gsub("-std-", "_StDeviation_", name.new)
name.new <- gsub("Mag", "Magnitude", name.new)
